<div class="modal-body m-2 p-2">
   <%= form_with(model: user , local: false) do |form| %>
      <div id="errorArea">
        
      </div>
         
      <div class="form-group mt-5  ">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class:"form-control"%>
      </div>

      <div class="form-group mt-5 ">
        <%= form.label :email , class: "form-label" %>
        <%= form.text_field :email, class:"form-control"%>
      </div>

      <div class="form-group mt-5 ">
       <%= form.label :address ,class: "form-label"%>
        <%= form.text_field :address ,class:"form-control"%>
      </div>

      <div class="form-group mt-5 ">
        <%= form.label :contact ,class: "form-label"%>
        <%= form.text_field :contact ,class:"form-control"%>
      </div><br>
      <div class="actions">
        <%= form.submit  class:"btn btn-danger", data:{bs_dismiss: "modal"}%>
      </div>
      
</div>
  <div class="modal-footer">
     <button type="button" class="btn btn-danger close-modal" data-bs-dismiss="modal">Close</button>
  </div>

  <% end %>



